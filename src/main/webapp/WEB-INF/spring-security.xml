<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
        xmlns="http://www.springframework.org/schema/security"
        xmlns:beans="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <http auto-config="true">
        <intercept-url pattern="/Restaurant/service/**" access="ROLE_ADMIN" />
        <intercept-url pattern="/login" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <form-login login-page="/Restaurant/signin"
                    default-target-url="/Restaurant"
                    authentication-failure-url="/Restaurant/signin-failure"/>

                    <!--login-processing-url="/Restaurant/j_spring_security_check"/>-->
                    <!--authentication-success-forward-url="/Restaurant/service/service"-->
                    <!--always-use-default-target="true"-->
                    <!--<csrf disabled="true"/>-->

        <!--<form-login-->
                <!--login-page="/login"-->
                <!--default-target-url="/welcome"-->
                <!--login-processing-url="/j_spring_security_check"-->
                <!--authentication-failure-url="/login?error"-->
                <!--username-parameter="username"-->
                <!--password-parameter="password" />-->
                <!--<logout logout-url="/j_spring_security_logout" logout-success-url="/home"  />-->
    </http>

    <authentication-manager>
        <authentication-provider>
            <!--user-service-ref="customUserDetailsService">-->
            <user-service>
                <user name="admin" password="admin" authorities="ROLE_ADMIN" />
            </user-service>
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="customUserDetailsService" class="ua.goit.timonov.enterprise.service.CustomUserDetailsService"/>
    <beans:bean id="userManager" class="ua.goit.timonov.enterprise.service.UserManager"/>

</beans:beans>